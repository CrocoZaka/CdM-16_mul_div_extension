{
    "name": "vscode-cdm-extension",
    "displayName": "CdM Processors",
    "description": "Tools for CdM Processors",
    "version": "1.0.0",
    "engines": { "vscode": "^1.63.0" },
    "categories": [ "Debuggers", "Programming Languages", "Snippets" ],
    "main": "./out/extension.js",
    "icon": "icon.png",
    "publisher": "cdm-processors",
    "homepage": "https://github.com/cdm-processors/cdm-devkit",
    "bugs": "https://github.com/cdm-processors/cdm-devkit/issues",
    "repository": { "type": "git", "url": "https://github.com/cdm-processors/cdm-devkit.git" },
    "keywords": [
        "assembly",
        "macro",
        "assembler",
        "cdm8",
        "asm",
        "cdm16",
        "cdm",
        "cdm8e"
    ],
    "contributes": {
        "commands": [
            {
                "command": "cdm.debug.writeTarget",
                "title": "CdM: Pick the target processor",
                "icon": "$(circuit-board)"
            }
        ],
        "breakpoints": [
            {
                "language": "cdm8-assembly"
            },
            {
                "language": "cdm8e-assembly"
            },
            {
                "language": "cdm16-assembly"
            }
        ],
        "languages": [
            {
                "id": "cdm8-assembly",
                "aliases": [
                    "CdM-8 Assembly",
                    "cdm8-assembly"
                ],
                "extensions": [
                    ".asm .h"
                ],
                "configuration": "./languages/assembly-language-configuration.json"
            },
            {
                "id": "cdm8e-assembly",
                "aliases": [
                    "CdM-8e Assembly",
                    "cdm8e-assembly"
                ],
                "extensions": [
                    ".asm .h"
                ],
                "configuration": "./languages/assembly-language-configuration.json"
            },
            {
                "id": "cdm16-assembly",
                "aliases": [
                    "CdM-16 Assembly",
                    "cdm16-assembly"
                ],
                "extensions": [
                    ".asm .h"
                ],
                "configuration": "./languages/assembly-language-configuration.json"
            },
            {
                "id": "cdm-microcode",
                "aliases": [
                    "CdM Microcode",
                    "cdm-microcode"
                ],
                "extensions": [
                    ".def"
                ],
                "configuration": "./languages/microcode-language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "cdm8-assembly",
                "scopeName": "source.asm.cdm8",
                "path": "./syntaxes/cdm8-assembly.tmLanguage.json"
            },
            {
                "language": "cdm8e-assembly",
                "scopeName": "source.asm.cdm8e",
                "path": "./syntaxes/cdm8e-assembly.tmLanguage.json"
            },
            {
                "language": "cdm16-assembly",
                "scopeName": "source.asm.cdm16",
                "path": "./syntaxes/cdm16-assembly.tmLanguage.json"
            },
            {
                "language": "cdm-microcode",
                "scopeName": "source.cdm-microcode",
                "path": "./syntaxes/cdm-microcode.tmLanguage.json"
            }
        ],
        "snippets": [
            {
                "language": "cdm8-assembly",
                "path": "./snippets/cdm-assembly-snippets.json"
            },
            {
                "language": "cdm8e-assembly",
                "path": "./snippets/cdm-assembly-snippets.json"
            },
            {
                "language": "cdm16-assembly",
                "path": "./snippets/cdm-assembly-snippets.json"
            }
        ],
        "debuggers": [
            {
                "label": "CdM Debugger",
                "type": "cdm",
                "languages": [
                    "cdm8-assembly",
                    "cdm8e-assembly",
                    "cdm16-assembly"
                ],
                "configurationAttributes": {
                    "launch": {
                        "required": [
                            "sources",
                            "artifacts"
                        ],
                        "properties": {
                            "sources": {
                                "type": "array",
                                "items": { "type": "string", "description": "An assembly file." },
                                "description": "Assembly files, which will be passed to cocas."
                            },
                            "artifacts": {
                                "type": "object",
                                "properties": {
                                    "image": {
                                        "type": "string",
                                        "description": "The path to the file where the built image will be saved."
                                    },
                                    "debugInfo": {
                                        "type": "string",
                                        "description": "The path to the file where the debug information about the built image will be saved."
                                    }
                                },
                                "description": "The build artifacts file paths."
                            }
                        }
                    }
                }
            }
        ],
        "taskDefinitions": [
            {
                "type": "cdm"
            }
        ],
        "configuration": {
            "title": "Coco-de-Mer",
            "properties": {
                "cdm.debug.target": {
                    "enum": ["cdm16", "cdm8e", "cdm8"],
                    "default": "cdm16",
                    "description": "The codename of processor from Coco-de-Mer family, which will be used for debugging."
                },
                "cdm.debug.architecture": {
                    "enum": ["harvard", "vonNeumann"],
                    "default": "harvard",
                    "description": "Memory configuration, which will be passed to the debug server."
                },
                "cdm.debug.address": {
                    "type": "string",
                    "default": "ws://localhost:7001",
                    "description": "Websocket address of debug server."
                }
            }
        },
        "views": {
            "debug": [
                {
                    "id": "cdm.debug.registers",
                    "name": "Registers",
                    "when": "inDebugMode && debugType == 'cdm'"
                }
            ],
            "cdm-build": [
                {
                    "id": "cdm.build.settings",
                    "name": "Server Settings"
                },
                {
                    "id": "cdm.build.assemblies",
                    "name": "Assemblies"
                }
            ]
        },
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "cdm-build",
                    "title": "Coco-de-Mer Developer Utilities",
                    "icon": "images/view.svg"
                }
            ]
        }
    },
    "activationEvents": [ "onDebug" ],
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/mocha": "^10.0.3",
        "@types/node": "18.x",
        "@types/vscode": "1.63.0",
        "@types/ws": "^8.5.9",
        "@typescript-eslint/eslint-plugin": "^6.9.0",
        "@typescript-eslint/parser": "^6.9.0",
        "@vscode/test-electron": "^2.3.6",
        "@vscode/vsce": "^2.22.0",
        "eslint": "^8.52.0",
        "glob": "^10.3.10",
        "mocha": "^10.2.0",
        "typescript": "^5.2.2"
    },
    "__metadata": {
        "publisherDisplayName": "CdM Processors"
    },
    "dependencies": {
        "@vscode/debugadapter": "^1.64.0",
        "@vscode/debugprotocol": "^1.64.0",
        "ws": "^8.14.2"
    }
}
